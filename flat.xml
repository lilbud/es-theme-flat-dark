	<view name="detailed">	
		
		<image name="md_image">
			<pos>0.254 0.202</pos>
			<maxSize>0.185 0.327</maxSize>
			<origin>0 0</origin>
		</image>
	
	</view>
	
<feature supported="carousel">
  
  <view name="system">

    <carousel name="systemcarousel">
      <pos>0 0.42</pos> <!-- Currently only y value is used -->
      <size>1 0.2325</size> <!-- currently only height value is used -->
      <color>ffffff</color>
      <logoScale>1.5</logoScale>
      <logoSize>0.125 0.155</logoSize>
      <maxLogoCount>5</maxLogoCount>
    </carousel>

   <text name="systemInfo">
      <backgroundColor>dddddd00</backgroundColor>
      <color>00000000</color>
      <fontPath></fontPath>
      <fontSize>0.035</fontSize>
    </text>

  </view>

  </feature>
	
  <feature supported="video">
		
	  <image name="md_marquee">
			<origin>0 0</origin>
			<pos>0.800 0.01</pos>
			<maxSize>0.19 0.10</maxSize>
	  </image>
	  
	  <video name="md_video">
			<pos>0.254 0.202</pos>
			<origin>0 0</origin>
			<size>0.185 0.327</size>
			<delay>0.0</delay>
			<default>./assets/static.mp4</default>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
	  </video>
	  
	</feature>
