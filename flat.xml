<theme>
    <formatVersion>4</formatVersion>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/box.png</path>
			<color>241d1d</color>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>

	</view>

	<view name="basic, detailed, grid, video">
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>c9c9c9</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		<text name="md_rating, md_developer, md_genre, md_players, md_playcount, md_description, md_releasedate">
			<color>c9c9c9</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		<helpsystem name="help">
			<textColor>ffffffff</textColor>
			<iconColor>ffffffff</iconColor>
		</helpsystem>

		<image name="logo">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>0.173 0.116</size>
		</image>
		
		<textlist name="gamelist">
			<selectedColor>ffffff</selectedColor>
			<primaryColor>c9c9c9</primaryColor>
			<secondaryColor>c9c9c9</secondaryColor>
			<fontPath>./assets/OPENSANS.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.176 0.194</pos>
			<size>0.648 0.68</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	


	</view>

	<view name="basic">

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/template_basic.png</path>
		</image>

	</view>

